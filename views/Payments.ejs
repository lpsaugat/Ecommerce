    <div class="text-lg md:text-[18px] lg:text-[24px]">Order Summary</div>
  </div>
  <div class="mt-[27px] md:mt-[40px]">
    <div class="grid lg:grid-cols-2 gap-x-[30px]">
      <%- include ("./partials/Billingitems") %>
    </div>
  </div>
</div>
<div class="mb-[210px] md:mb-[300px] lg:mb-0"></div>

<div
  class="h-[200px] md:h-[249px] w-full fixed bottom-0 bg-white px-5 pt-[19px] md:pt-[16px] border-t-[1px] block lg:hidden"
>
  <div class="justify-between flex">
    <div class="font-medium md:text-[14px] text-[12px]">Subtotal</div>
    <div class="font-medium md:text-[14px] text-[12px]">Rs.45000</div>
  </div>
  <div class="justify-between flex pt-[8px] md:pt-[16px]">
    <div class="font-medium md:text-[14px] text-[12px]">Shipping</div>
    <div class="font-medium md:text-[14px] text-[12px]">Rs.200</div>

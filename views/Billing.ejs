    <div class="font-medium md:text-[14px] text-[12px]">Rs.100</div>
  </div>
  <div class="border-t-[1px] mt-[15px] md:mt-[16px] pt-[11px] md:pt-[22px]">
    <div class="justify-between flex pt-[8px] md:pt-[16px]">
      <div class="font-medium md:text-[14px] text-[12px]">Tax</div>
      <div class="font-medium md:text-[14px] text-[12px]">Rs.100</div>
    </div>
  </div>

  <div class="justify-between flex pt-[10px] md:pt-[17px] gap-x-[10px]">
    <div
      class="font-medium text-[#00a6ef] flex text-[10px] md:text-[12px] items-center"
    >
      <button class="flex items-center" onclick="location.href = 'products'">
        <img
          src="../public/Images/accordion-blue.svg"
          class="rotate-180 w-[4px] h-[7px]"
        />&nbsp; Continue Shopping
      </button>
    </div>
    <button
      class="w-[122px] h-[32px] rounded-[8px] text-[12px] items-center flex justify-center text-[#ffffff] font-medium bg-gradient-to-r from-[#3baf3d] to-[#5DC234]"
      form="Billform"
      type="submit"
    >
      Checkout &nbsp;
      <img src="../public/Images/arrow.svg" class="w-[12.3px] h-[12.3px]" />
    </button>
  </div>

<!doctype html>

<div class="bg-[#f8f8f8] pr-5">
  <div class="hidden"><%- include ("../partials/header") %></div>

  <div class="flex max-w-1200 mx-auto">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>

      <div class="grid col-span-3 grid-cols-3 gap-x-1 py-3 rounded-lg">
        <!-- Add Carousel Form -->
        <div
          class="rounded-md w-full col-span-3 font-medium text-[17px] p-4 text-[#000123] bg-white mt-2"
        >
          <!-- Homepage Carousel -->
          <div
            class="swiper mySwiper w-full relative h-[314px] md:h-[382px] lg:h-[540px] xl:h-[640px] 2xl:h-[738px]"
          >
            <div class="swiper-wrapper">
              <div class="swiper-slide w-full">
                <%- include('../partials/carousel'); %>
              </div>
              <div class="swiper-slide w-full">
                <%- include('../partials/carousel2'); %>
              </div>
              <div class="swiper-slide w-full">
                <%- include('../partials/carousel'); %>
              </div>
              <div class="swiper-slide w-full">
                <%- include('../partials/carousel2'); %>
              </div>
            </div>
            <div
              class="swiper-pagination flex justify-end max-w-[1200px] bottom-6 absolute px-5 lg:px-10 lg:-translate-x-1/2"
            ></div>
          </div>
          <div class="grid col-span-3 grid-cols-3 gap-x-1">
            <div class="col-span-3">
                <% for(i=0;i<carousel.length;i++) {%>
                  <%- include("./carouselItems")%> <%}%>
              </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="hidden"><%- include ("../partials/footer") %></div>

<div class="bg-[#f8f8f8] pr-5">
  <div class="hidden"><%- include ("../partials/header") %></div>

  <div class="flex max-w-1200 mx-auto">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>
      <div class="grid col-span-3 grid-cols-3 gap-x-1">
        <div
          class="rounded-md col-span-3 w-full font-medium text-[17px] p-4 text-[#000123] bg-white mt-2"
        >
          Update User:
          <form class="rounded-lg p-3 mt-2" id="updateUser">
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="Name" class="text-[12px] md:text-[14px] font-medium"
                >Name</label
              >
              <input
                type="text"
                name="name"
                placeholder="<%=user.name%>"
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
              />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px] flex gap-x-1">
              <div class="flex flex-col">
                <label
                  for="user_type"
                  class="text-[12px] md:text-[14px] font-medium"
                  >User Type</label
                >
                <input
                  type="text"
                  name="user_type"
                  placeholder="<%=user.user_type%>"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
              <div class="flex flex-col">
                <label
                  for="Phone"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Phone</label
                >
                <input
                  type="text"
                  name="phone"
                  placeholder="<%=user.phone%>"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
              <div class="flex flex-col">
                <label
                  for="address"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Address</label
                >
                <input
                  type="text"
                  name="address"
                  placeholder="<%=user.address%>"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
            </div>

            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="image" class="text-[12px] md:text-[14px] font-medium"
                >Display Image :</label
              >
              <input type="file" name="image" />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="email" class="text-[12px] md:text-[14px] font-medium"
                >Email</label
              >
              <input
                type="text"
                name="email"
                placeholder="<%=user.email%>"
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
              />
            </div>

            <div class="flex justify-between">
              <button
                type="submit"
                class="text-[17px] mt-3 font-medium p-3 bg-gradient-to-r from-[#3baf3d] to-[#5DC234] text-white rounded-md"
              >
                Update User
              </button>
              <button
                class="text-[17px] mt-3 font-medium p-3 bg-[#DC0D0D] text-white rounded-md"
                onclick="deletefUser()"
                type="button"
              >
                Delete User
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="flex">
  <div id="deleteUser" style="display: none">
    <%- include ("./deleteUser") %>
  </div>
</div>
<div id="customAlert" class="alert-modal">
  <div class="alert-content">
    <h2 id="alertTitle">alertTitle</h2>
    <p id="alertMessage">alertMessage</p>
    <button id="okButton">OK</button>
  </div>
</div>
<div class="hidden"><%- include ("../partials/footer") %></div>

<!doctype html>

<div class="bg-[#f8f8f8] pr-5">
  <div class="hidden"><%- include ("../partials/header") %></div>

  <div class="flex max-w-1200 mx-auto">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>

      <div class="grid col-span-3 grid-cols-3 gap-x-1">
        <div
          class="rounded-md col-span-3 w-full font-medium text-[17px] p-4 text-[#000123] bg-white mt-2"
        >
          Add User:
          <form class="rounded-lg p-3 mt-2" id="addUser">
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="Name" class="text-[12px] md:text-[14px] font-medium"
                >Name *</label
              >
              <input
                type="text"
                name="name"
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                required
              />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px] flex gap-x-1">
              <div class="flex flex-col">
                <label
                  for="user_type"
                  class="text-[12px] md:text-[14px] font-medium"
                  >User Type *</label
                >

                <div class="mt-[14px] flex items-center space-x-4 h-[36px]">
                  <input
                    type="radio"
                    name="user_type"
                    value="customer"
                    class="h-[18px] w-[18px]"
                    required
                  />
                  <label for="customer">Customer</label>

                  <input
                    type="radio"
                    name="user_type"
                    value="vendor"
                    class="h-[18px] w-[18px]"
                    required
                  />
                  <label for="vendor">Vendor</label>
                </div>
              </div>

              <div class="flex flex-col">
                <label
                  for="Phone"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Phone</label
                >
                <input
                  type="text"
                  name="phone"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
              <div class="flex flex-col">
                <label
                  for="address"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Address</label
                >
                <input
                  type="text"
                  name="address"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
            </div>

            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="image" class="text-[12px] md:text-[14px] font-medium"
                >Display Image :</label
              >
              <input type="file" name="image" />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="email" class="text-[12px] md:text-[14px] font-medium"
                >Email *</label
              >
              <input
                type="text"
                name="email"
                required
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
              />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label
                for="password"
                class="text-[12px] md:text-[14px] font-medium"
                >Password *</label
              >
              <input
                type="text"
                name="password"
                required
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
              />
            </div>
            <button
              type="submit"
              class="text-[17px] mt-3 font-medium p-3 bg-gradient-to-r from-[#3baf3d] to-[#5DC234] text-white rounded-md"
            >
              Add User
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include ("./alert") %>

  <div class="hidden"><%- include ("../partials/footer") %></div>
</div>

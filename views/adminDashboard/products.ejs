<div class="bg-[#FAFAFA] p-5">
  <div class="hidden"><%- include ("../partials/header") %></div>
  <a href="/" class="">
    <img src="../../public/Images/logo.svg" />
  </a>  <div class="flex max-w-1200 mx-auto pt-5">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>

      <div class="grid col-span-3 grid-cols-3 gap-x-1  p-3 border-[3px] rounded-lg">
        <!-- Product summary -->
       
        <!-- Add Products Form -->
        <div
          class="rounded-md w-full col-span-3 font-medium text-[17px] p-4 text-[#000123] bg-white border-2 mt-2"
        >
        Add Product:
          <form class="border-2 rounded-lg p-3 mt-2" id="addProduct">
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label for="Name" class="text-[12px] md:text-[14px] font-medium"
                >Name *</label
              >
              <input
                type="text"
                name="name"
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                required
              />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px] flex gap-x-1">
              <div class="flex flex-col">
                <label
                  for="price"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Price (Rs.) *</label
                >
                <input
                  type="text"
                  name="price"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                  required
                />
              </div>
              <div class="flex flex-col">
                <label
                  for="discountedFrom"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Discount From (Rs.) </label
                >
                <input
                  type="text"
                  name="discountedFrom"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
              <div class="flex flex-col">
                <label
                  for="quantity"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Quantity *</label
                >
                <input
                  type="text"
                  name="quantity"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                  required
                />
              </div>
              <div class="flex flex-col">
                <label
                  for="measure"
                  class="text-[12px] md:text-[14px] font-medium"
                  >Measure</label
                >
                <input
                  type="text"
                  name="measure"
                  class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
                />
              </div>
            </div>

            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label
                for="primaryImage"
                class="text-[12px] md:text-[14px] font-medium"
                >Display Image * :</label
              >
              <input type="file" name="primaryImage" required />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label
                for="description"
                class="text-[12px] md:text-[14px] font-medium"
                >Description</label
              >
              <input
                type="text"
                name="description"
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
              />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label
                for="longDescription"
                class="text-[12px] md:text-[14px] font-medium"
                >Long Description</label
              >
              <input
                type="text"
                name="longDescription"
                class="w-full h-[32px] md:h-[36px] lg:h-[42px] border-[0.5px] rounded-[5px] mt-[14px] md:mt-[12px] pl-2"
              />
            </div>
            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px]">
              <label
                for="otherImages"
                class="text-[12px] md:text-[14px] font-medium"
                >Other Images:</label
              >
              <input type="file" name="otherImages" multiple />
            </div>

            <div class="mt-[21px] md:mt-[24px] lg:mt-[16px] flex-col flex">
              <label
                for="category"
                class="text-[12px] md:text-[14px] font-medium"
                >Categories</label
              >
              <select
                id="categoryDropdown"
                multiple
                size="3"
                class="overflow-y-scroll"
              >
              <% for (i = 0;i<category.length;i++){%>
                <option value="<%=category[i].name%>"><%=category[i].name%></option>
                <%}%>
              </select>
              <input
                type="text"
                id="selectedOptionsField"
                readonly
                name="category"
              />
            </div>
            <button
              type="submit"
              class="text-[17px] mt-3 font-medium p-3 bg-gradient-to-r from-[#3baf3d] to-[#5DC234] text-white  rounded-md"
            >
              Add Product
            </button>
          </form>
        </div>
        <div class="mt-10 col-span-3">
          <% for(i=0;i<products.length;i++) {%>
            <%- include("./productItems")%><%}%>
        </div>
        <div class="mt-5 col-span-3 justify-center flex"><button class="p-3 px-4 border-2 rounded-md  font-medium bg-whte" onclick="window.location.href='/admindashboard/allproducts'">View All</button>
</div>
      </div>
    </div>
    <div id="customAlert" class="alert-modal">
      <div class="alert-content">
        <h2 id="alertTitle"></h2>
        <p id="alertMessage"></p>
        <button id="okButton">OK</button>
      </div>
    </div>
    
  <!-- <div id="editor"></div> -->

  </div>
  <div class="hidden"><%- include ("../partials/footer") %></div>
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <script>
    var quill = new Quill('#editor', {
      theme: 'snow' // Choose a theme (snow, bubble, etc.)
    });
  </script>
  
</div>

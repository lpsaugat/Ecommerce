<div class="bg-[#f8f8f8] pr-5">
  <div class="hidden"><%- include ("../partials/header") %></div>
  
  <div class="flex max-w-1200 mx-auto">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>
      <div
        class="grid col-span-3 grid-cols-3 gap-x-1 p-3 rounded-lg"
      >
        <div class="h-full w-full">
          <div
            class="rounded-md w-full text-[26px] p-4 bg-white text-[#FFFFFA]  h-[192px] mt-2"
          >
            <div class="text-[17px] font-medium text-[black]">
              Total Products : <%=productAmount%>
            </div>
            <div class="text-[17px] font-medium text-[black]">
              Sold Products : <%=ordersCount%>
            </div>
            <div class="text-[17px] font-medium text-[black]">
              Total Quantity sold : <%=totalQuantity%>
            </div>
          </div>
          <div
            class="rounded-md w-full text-[26px] p-4 bg-white text-[#FFFFFA]  h-[192px] mt-2"
          >
            <div class="text-[17px] font-medium text-[black]">
              On Shipping :
            </div>
            <div class="text-[17px] font-medium text-[black]">
              Order Confirmed :
            </div>
          </div>
        </div>
        <div class="h-full w-full">
          <div
            class="rounded-md w-full text-[26px] p-4 bg-white text-[#FFFFFA]  h-[192px] mt-2"
          >
            <div class="text-[17px] font-medium text-[black]">
              Amount Sold : Rs. <%=totalAmount%>
            </div>
            <div class="text-[17px] font-medium text-[black]"></div>
          </div>
        </div>
        <div class="h-full w-full">
          <div
            class="rounded-md w-full text-[26px] p-4 bg-white text-[#FFFFFA]  h-[192px] mt-2"
          >
            <div class="text-[17px] font-medium text-[black]">
              Registered Customers : <%=users%>
            </div>
            <div class="text-[17px] font-medium text-[black]">
              Registered Vendors : <%=vendors%>
            </div>
            
          </div>
         
        </div>
        
      </div>
      </div>
    </div>

    <div class="hidden"><%- include ("../partials/footer") %></div>
  </div>
</div>

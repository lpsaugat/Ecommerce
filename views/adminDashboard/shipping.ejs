<div class="bg-[#f8f8f8] pr-5">
  <div class="hidden"><%- include ("../partials/header") %></div>
  
  <div class="flex max-w-1200 mx-auto">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>

      <div
        class="grid col-span-3 grid-cols-3 gap-x-1 p-3  rounded-lg"
      >
        <!-- Shipping summary -->
        <div
          class="rounded-md w-full col-span-1 text-[26px] p-4 bg-white text-[#FFFFFA]  h-[192px] mt-2"
        >
          <div class="text-[17px] font-medium text-[black]">
            Total Shipping : <%= shipping.length%>
          </div>
          <div class="text-[17px] font-medium text-[black]">
             Confirmed : <%= shippingConfirmed %>
          </div>
          <div class="text-[17px] font-medium text-[black]">
            On Route : <%= shippingOnTheWay %>
          </div>
          <div class="text-[17px] font-medium text-[black]">
            Delivered : <%= shippingDelivered %>
          </div>
          <div class="text-[17px] font-medium text-[black]">
            Cancelled : <%= shippingCancelled %>
          </div>
        </div>
        <div class="mt-2 col-span-3">
          <div
  class="rounded-t-md w-full col-span-2 text-[17px] text-[#000123] bg-white border-b-[1px]"
>
  <div
    class="justify-between items-center flex  px-[10px] md:px-[11px] lg:px-[17px] rounded-[3px] lg:shadow-none shadow-[0px_0px_2px_rgba(0,0,0,0.25)]"
  >
    <div class="flex w-full md:h-[86px]">
      <div
        class="md:w-[86px] w-[69px] justify-center flex items-center ml-[10px]"
      >
        Name
      </div>
      <div
        class="pl-[10px] md:pl-[10px] flex flex-col lg:font-medium text-ellipsis truncate lg:overflow-visible lg:flex-row w-full lg:grid grid-cols-12 lg:items-center"
      >
        <div
          class="text-[12px] md:text-sm lg:text-[16px] col-span-4 lg:pl-[40px] items-center flex"
        >
          UserID
        </div>

        <div
          class="text-[12px] col-span-2 w-auto md:text-[16px] lg:pt-0 font-medium pt-[14px] md:pt-[17px] justify-between items-center grid-cols-1 flex"
        >
          Total
        </div>
        <form
          class="col-span-2 justify-between items-center flex text-[16px] pt-[17px] deliveryStatus"
        >
          
          Status
        </form>
        <div class="lg:flex font-roboto flex items-center left-0 w-auto">
          <div class="flex items-center">
            <div class="flex justify-center">
              
            </div>
          </div>
        </div>
        <div
          class="text-[12px] justify-between col-span-3 w-auto md:text-[16px] lg:pt-0 font-medium pt-[14px] md:pt-[17px] items-center grid-cols-2 flex"
        >
          <div class="pl-1 flex flex-col items-center">
            <div class="text-[14px]">
              Created
            </div>
          </div>
          <div class="pl-1 flex flex-col items-center">
            <div class="text-[14px]">
              Updated
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

          <div><% for(i=0;i<shipping.length;i++) {%>
            <%- include("./shippingItems")%><%}%></div>
        </div>
        <div class="col-span-3 mt-5 justify-center flex h-[52px]"><button class="p-3 px-4 border-2 rounded-md  font-medium bg-whte" onclick="window.location.href='/admindashboard/allShipping'">View All</button>
        </div>
      </div>
      
    </div>
  </div>
  <div class="hidden"><%- include ("../partials/footer") %></div>
</div>

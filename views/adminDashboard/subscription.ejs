    <div
      class="hidden lg:flex absolute h-auto bottom-0 flex-col items-center pb-[56px] text-center w-full font-semibold text-[36px] text-white bg-gradient-to-t from-black group-hover:pb-[65%] transition-all duration-500"
    >
      <div class="pb-[56px] group-hover:pb-0 text-white pt-[50px]">
        <%= subscriptiondata[0].subscriptionText %>
      </div>

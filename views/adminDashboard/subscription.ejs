        <div
          class="rounded-md w-full col-span-3 font-medium text-[17px] p-4 text-[#000123] bg-white mt-2"
        >
          <!-- Subscription Page -->
          <div
  class="grid lg:grid-cols-3 grid-cols-1 gap-y-5 lg:overflow-clip lg:bg-black"
  style="max-height: calc(100vh - 103px); min-height: calc(100vh - 103px);"
>
  <div class="h-[378px] md:h-[429px] lg:h-full w-full relative group">

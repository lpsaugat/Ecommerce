<div class="bg-[#FAFAFA] pr-5">
  <div class="hidden"><%- include ("../partials/header") %></div>

  <div class="flex max-w-1200 mx-auto">
    <div class="grid gap-x-3 grid-cols-4 w-full rounded-sm">
      <%- include ("./sidebar") %>

      <div
        class="grid col-span-3 grid-cols-3 gap-x-1 p-3 border-[3px] rounded-lg"
      >
        <!-- User summary -->
        <div
          class="rounded-md w-full col-span-1 text-[26px] p-4 bg-white text-[#FFFFFA] border-2 h-[192px] mt-2"
        >
          <div class="text-[17px] font-medium text-[black]">
            Name : <%=user.name%>
          </div>
          <div class="text-[17px] font-medium text-[black]">
            Email : <%=user.email%>
          </div>
          <div class="text-[17px] font-medium text-[black]">
            Phone : <%=user.phone%>
          </div>
        </div>
        <div
          class="rounded-md w-full col-span-1 text-[26px] p-4 bg-white text-[#FFFFFA] border-2 h-[192px] mt-2"
        >
          <div class="text-[17px] font-medium text-[black]">
            Products Listed :
          </div>
          <div class="text-[17px] font-medium text-[black]">
            Products Sold :
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="hidden"><%- include ("../partials/footer") %></div>
